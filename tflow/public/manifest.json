{
  "manifest_version": 3,
  "name": "TabFlow",
  "version": "1.0.0",
  "description": "A powerful Chrome extension to manage and organize browser tabs efficiently.",
  "permissions": [
    "tabs",
    "tabGroups",
    "alarms",
    "storage",
    "notifications",
    "sessions",
    "idle"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "icons": {
    "16": "icon-16px.png",
    "48": "icon-48px.png",
    "128": "icon-128px.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
